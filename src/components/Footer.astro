---
const currentYear = new Date().getFullYear()

const services = [
  { label: 'Trituración de Materiales', href: '/servicios#trituracion' },
  { label: 'Decomiso Electrónico', href: '/servicios#decomiso' },
  { label: 'Outsourcing', href: '/servicios#outsourcing' },
  { label: 'Logística', href: '/servicios#logistica' },
  { label: 'Reciclaje Municipal', href: '/servicios#municipal' },
  { label: 'ReCreo Materiales', href: '/servicios#recreo' },
]

const company = [
  { label: 'Sobre Nosotros', href: '/nosotros' },
  { label: 'Locaciones', href: '/locaciones' },
  { label: 'Empleos', href: '/empleos' },
  { label: 'Blog', href: '/blog' },
  { label: 'Reportes', href: '/reportes' },
]

const locations = [
  { name: 'Arecibo (Principal)', address: 'Bo. Higuillar, Calle Tiara', phone: '787-262-0305' },
  { name: 'Hatillo', address: 'Carr. #2 KM 88.1', phone: '787-262-1825' },
  { name: 'Santurce', address: 'Área Metropolitana', phone: '787-726-0444' },
]
---

<footer class="bg-rdn-green-dark text-white">
  <!-- Main footer -->
  <div class="mx-auto max-w-[1440px] px-6 md:px-12 lg:px-20 pt-20 pb-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8">
      <!-- Brand column -->
      <div class="lg:col-span-4">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-rdn-lime rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-rdn-green-dark" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M7 19H4.815a1.83 1.83 0 0 1-1.57-.881 1.785 1.785 0 0 1-.004-1.784L7.196 9.5" />
              <path d="M11 19h8.203a1.83 1.83 0 0 0 1.556-.89 1.784 1.784 0 0 0 0-1.775l-1.226-2.12" />
              <path d="m14 16-3 3 3 3" />
              <path d="M8.293 13.596 4.875 7.97l1.227-2.122a1.83 1.83 0 0 1 1.582-.886h5.316" />
            </svg>
          </div>
          <div>
            <span class="block text-xl font-bold leading-none">RDN</span>
            <span class="block text-xs font-medium text-white/50 uppercase tracking-[0.15em]">Reciclaje del Norte</span>
          </div>
        </div>
        <p class="text-white/60 text-sm leading-relaxed max-w-sm mb-8">
          Cooperativa de trabajadores líder en servicios de reciclaje en Puerto Rico. Más de 30 años transformando residuos en recursos.
        </p>
        <!-- Social -->
        <div class="flex gap-3">
          <a href="https://facebook.com/Reciclajedelnortept/" target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-rdn-lime hover:text-rdn-green-dark transition-all duration-300" aria-label="Facebook">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://instagram.com/reciclaje_delnorteinc/" target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-rdn-lime hover:text-rdn-green-dark transition-all duration-300" aria-label="Instagram">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
          </a>
          <a href="https://pr.linkedin.com/in/rdn-reciclaje-del-norte-02854941" target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-rdn-lime hover:text-rdn-green-dark transition-all duration-300" aria-label="LinkedIn">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div class="lg:col-span-3">
        <h4 class="text-sm font-semibold uppercase tracking-[0.15em] text-rdn-lime mb-6">Servicios</h4>
        <ul class="space-y-3">
          {services.map(s => (
            <li>
              <a href={s.href} class="text-sm text-white/60 hover:text-white transition-colors duration-300">{s.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div class="lg:col-span-2">
        <h4 class="text-sm font-semibold uppercase tracking-[0.15em] text-rdn-lime mb-6">Empresa</h4>
        <ul class="space-y-3">
          {company.map(c => (
            <li>
              <a href={c.href} class="text-sm text-white/60 hover:text-white transition-colors duration-300">{c.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="lg:col-span-3">
        <h4 class="text-sm font-semibold uppercase tracking-[0.15em] text-rdn-lime mb-6">Contacto</h4>
        <div class="space-y-4">
          {locations.map(loc => (
            <div>
              <p class="text-sm font-medium text-white">{loc.name}</p>
              <p class="text-xs text-white/50">{loc.address}</p>
              <a href={`tel:${loc.phone}`} class="text-xs text-white/50 hover:text-rdn-lime transition-colors">{loc.phone}</a>
            </div>
          ))}
          <div class="pt-2">
            <a href="mailto:serviciosrdn@reciclajedelnorte.com" class="text-sm text-rdn-lime hover:text-rdn-lime-light transition-colors">
              serviciosrdn@reciclajedelnorte.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-white/10">
    <div class="mx-auto max-w-[1440px] px-6 md:px-12 lg:px-20 py-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-xs text-white/40">
        &copy; {currentYear} Reciclaje del Norte Inc. P.T. Todos los derechos reservados.
      </p>
      <div class="flex items-center gap-6">
        <span class="text-xs text-white/40">P.O. Box 1822 Hatillo, PR</span>
        <div class="flex gap-4">
          <a href="/privacidad" class="text-xs text-white/40 hover:text-white transition-colors">Privacidad</a>
          <a href="/terminos" class="text-xs text-white/40 hover:text-white transition-colors">Términos</a>
        </div>
      </div>
    </div>
  </div>
</footer>
