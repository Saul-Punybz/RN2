---
import Layout from '../layouts/Layout.astro'

const posts = [
  {
    title: 'Puerto Rico estrena materiales de construcción reciclados',
    date: '3 de septiembre, 2025',
    author: 'RDN',
    excerpt: 'Lanzamiento de una línea innovadora de materiales de construcción fabricados con plástico y vidrio 100% reciclado en Puerto Rico.',
    tag: 'Innovación',
    featured: true,
  },
  {
    title: '¿Qué es la Ley Gramm-Leach-Bliley y cómo te afecta?',
    date: '8 de febrero, 2024',
    author: 'ALQMY',
    excerpt: 'Explora la Ley Gramm-Leach-Bliley para dueños y empleados de instituciones financieras. Cumplimiento y protección de datos.',
    tag: 'Legal',
    featured: false,
  },
  {
    title: '¿Por qué debes destruir información confidencial?',
    date: '8 de febrero, 2024',
    author: 'ALQMY',
    excerpt: 'La importancia de la destrucción de información confidencial para oficinas médicas, bufetes legales, fábricas y oficinas de contabilidad.',
    tag: 'Seguridad',
    featured: false,
  },
  {
    title: '¿Por qué es importante destruir los discos duros?',
    date: '8 de febrero, 2024',
    author: 'ALQMY',
    excerpt: 'Los discos duros almacenan gran cantidad de información digital. Aprende por qué su destrucción es crítica para la seguridad de tu empresa.',
    tag: 'Tecnología',
    featured: false,
  },
  {
    title: 'Reciclaje y disposición de equipos electrónicos',
    date: '8 de febrero, 2024',
    author: 'RDN',
    excerpt: 'Prácticas responsables de reciclaje y disposición de equipos electrónicos en Puerto Rico. Certificaciones y procesos.',
    tag: 'Reciclaje',
    featured: false,
  },
  {
    title: 'Cumplimiento con FACTA para empresas',
    date: '30 de octubre, 2023',
    author: 'RDN',
    excerpt: 'Protección de información financiera y personal. Lo que tu empresa necesita saber sobre el cumplimiento con FACTA.',
    tag: 'Legal',
    featured: false,
  },
]

const tagColors: Record<string, string> = {
  'Innovación': 'bg-rdn-lime/20 text-rdn-green-dark',
  'Legal': 'bg-amber-100 text-amber-800',
  'Seguridad': 'bg-blue-100 text-blue-800',
  'Tecnología': 'bg-purple-100 text-purple-800',
  'Reciclaje': 'bg-emerald-100 text-emerald-800',
}
---

<Layout title="Blog | Reciclaje del Norte" description="Noticias, artículos y actualizaciones sobre reciclaje, sostenibilidad y cumplimiento regulatorio en Puerto Rico.">
  <!-- Hero -->
  <section class="relative bg-rdn-green-dark pt-32 pb-20 overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-rdn-lime/5 rounded-full blur-[120px]"></div>
    <div class="relative mx-auto max-w-[1440px] px-6 md:px-12 lg:px-20">
      <span class="inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-rdn-lime bg-white/10 px-4 py-2 rounded-full mb-6 animate-fade-up">Blog</span>
      <h1 class="heading-xl text-white mb-6 animate-fade-up stagger-1">
        Noticias y<br/><span class="text-rdn-lime">recursos</span>
      </h1>
      <p class="text-xl text-white/60 max-w-2xl leading-relaxed animate-fade-up stagger-2">
        Mantente informado sobre reciclaje, sostenibilidad, regulaciones y las últimas novedades de RDN.
      </p>
    </div>
  </section>

  <!-- Blog posts -->
  <section class="section-padding bg-rdn-white">
    <div class="mx-auto max-w-[1440px]">
      <!-- Featured post -->
      {posts.filter(p => p.featured).map(post => (
        <div class="bg-rdn-green-dark rounded-3xl p-8 md:p-14 mb-12 reveal group cursor-pointer hover:shadow-2xl transition-shadow duration-500">
          <div class="grid lg:grid-cols-2 gap-10 items-center">
            <div>
              <div class="flex items-center gap-3 mb-6">
                <span class={`text-xs font-semibold px-3 py-1 rounded-full ${tagColors[post.tag] || 'bg-white/10 text-white'}`}>{post.tag}</span>
                <span class="text-xs text-white/40">{post.date}</span>
              </div>
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 group-hover:text-rdn-lime transition-colors duration-300">{post.title}</h2>
              <p class="text-white/60 text-lg leading-relaxed mb-6">{post.excerpt}</p>
              <div class="inline-flex items-center gap-2 text-rdn-lime font-semibold group-hover:gap-4 transition-all duration-300">
                <span>Leer artículo</span>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </div>
            </div>
            <div class="bg-gradient-to-br from-rdn-green to-rdn-green-light rounded-2xl aspect-video flex items-center justify-center">
              <svg class="w-20 h-20 text-rdn-lime/30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M12 3L2 9l10 6 10-6-10-6z"/><path d="M2 17l10 6 10-6"/><path d="M2 13l10 6 10-6"/></svg>
            </div>
          </div>
        </div>
      ))}

      <!-- Post grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.filter(p => !p.featured).map(post => (
          <article class="group bg-white rounded-2xl border border-rdn-sand-dark overflow-hidden card-hover reveal cursor-pointer">
            <div class="bg-rdn-sand aspect-video flex items-center justify-center">
              <svg class="w-12 h-12 text-rdn-green/20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1M19 20a2 2 0 002-2V8a2 2 0 00-2-2h-1M8 12h4M8 16h2"/></svg>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-3 mb-4">
                <span class={`text-[10px] font-semibold px-2.5 py-1 rounded-full ${tagColors[post.tag] || 'bg-rdn-sand text-rdn-gray'}`}>{post.tag}</span>
                <span class="text-[10px] text-rdn-gray">{post.date}</span>
              </div>
              <h3 class="text-lg font-bold text-rdn-charcoal mb-3 group-hover:text-rdn-green transition-colors line-clamp-2">{post.title}</h3>
              <p class="text-sm text-rdn-gray leading-relaxed line-clamp-3 mb-4">{post.excerpt}</p>
              <div class="flex items-center gap-2 text-rdn-green text-sm font-semibold group-hover:gap-4 transition-all duration-300">
                <span>Leer más</span>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
